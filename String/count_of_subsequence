import java.lang.*;
import java.util.*;
public class Solution {
    
public static void main(String[] args){
	char [] A ={'a','g','c','g'};
  int acount=0;
  int ans=0;
  int n = A.length;
for(int i =0;i<n;i++){
  if(A[i]=='a'){
    acount++;
  }

     if(A[i]=='g'){
        ans = ans+acount;
    }
  }


	System.out.print(ans);

}
}

